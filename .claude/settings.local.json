{
  "$schema": "https://claude.ai/schemas/claude-code-settings.json",
  "version": "2.1",
  "permissions": {
    "allow": ["*"],
    "deny": [],
    "defaultMode": "bypassPermissions",
    "autoApprove": true
  },
  "project": {
    "name": "HEPHAITOS",
    "description": "Replit for Trading - 코딩 없이 자연어로 AI 트레이딩 봇을 만드는 플랫폼",
    "paradigm": "Copy-Learn-Build",
    "type": "next-app",
    "framework": "next-15",
    "runtime": "nodejs"
  },

  "context": {
    "requiredFiles": [
      "BUSINESS_CONSTITUTION.md",
      "CLAUDE.md",
      "DESIGN_SYSTEM.md"
    ],
    "optionalFiles": [
      "BUSINESS_OVERVIEW.md",
      "docs/HEPHAITOS_CORE_REFERENCES.md"
    ],
    "autoRead": true,
    "maxContextFiles": 10
  },

  "codeStyle": {
    "language": "typescript",
    "strictMode": true,
    "formatter": "prettier",
    "linter": "eslint",
    "importSort": true,
    "useAbsoluteImports": true
  },

  "agents": {
    "enabled": true,
    "autoLoad": true,
    "autoExecute": true,
    "available": [
      "trading-architect",
      "strategy-builder",
      "legal-guardian"
    ]
  },

  "skills": {
    "enabled": true,
    "autoDiscover": true,
    "autoActivate": true,
    "available": [
      "copy-learn-build",
      "unified-broker-api",
      "design-system",
      "quant-2-0-risk-management",
      "grok-style-real-time-monitoring",
      "legal-compliance-system"
    ]
  },

  "commands": {
    "enabled": true,
    "autoComplete": true,
    "available": [
      "strategy",
      "backtest",
      "broker",
      "legal",
      "build"
    ]
  },

  "automation": {
    "autoFix": true,
    "autoFormat": true,
    "autoLint": true,
    "autoTest": false,
    "autoBuild": false,
    "autoCommit": false
  },

  "performance": {
    "parallelTools": true,
    "cacheResults": true,
    "lazyLoad": true,
    "maxConcurrentTasks": 5
  },

  "legalCompliance": {
    "noInvestmentAdvice": true,
    "disclaimerRequired": true,
    "educationOnly": true,
    "forbiddenPhrases": [
      "수익 보장",
      "확실한 수익",
      "~하세요"
    ],
    "requiredDisclaimer": "본 서비스는 투자 교육 및 도구 제공 목적이며, 투자 조언이 아닙니다."
  },

  "techStack": {
    "frontend": ["next.js@15", "typescript@5", "tailwindcss@3", "shadcn-ui"],
    "backend": ["supabase", "vercel-ai-sdk@5"],
    "charts": ["lightweight-charts@5", "recharts"],
    "state": ["zustand@4", "tanstack-query@5"],
    "testing": ["vitest", "playwright"]
  },

  "paths": {
    "components": "src/components",
    "lib": "src/lib",
    "api": "src/app/api",
    "types": "src/types",
    "hooks": "src/hooks",
    "stores": "src/stores",
    "styles": "src/styles"
  },

  "designSystem": {
    "theme": "dark-only",
    "primary": "#5E6AD2",
    "background": "#0D0D0F",
    "profit": "#22C55E",
    "loss": "#EF4444",
    "glassEffect": "backdrop-blur-xl + rgba(255,255,255,0.03)",
    "fontFamily": "Inter",
    "borderRadius": "lg"
  },

  "plugins": {
    "enabled": [
      "frontend-design",
      "context7",
      "playwright",
      "feature-dev",
      "pr-review-toolkit"
    ],
    "disabled": [
      "spec-kit",
      "hookify",
      "browser-pilot"
    ]
  }
}
