{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev",
      "type": "shell",
      "command": "npm run dev",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(error|warning):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting...",
          "endsPattern": "Ready in"
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "build",
      "type": "shell",
      "command": "npm run build",
      "group": "build",
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "typecheck",
      "type": "shell",
      "command": "npm run typecheck",
      "group": "build",
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "lint",
      "type": "shell",
      "command": "npm run lint",
      "group": "build",
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "test",
      "type": "shell",
      "command": "npm run test",
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "test:watch",
      "type": "shell",
      "command": "npm run test:watch",
      "isBackground": true,
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "test:coverage",
      "type": "shell",
      "command": "npm run test:coverage",
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "test:e2e",
      "type": "shell",
      "command": "npm run test:e2e",
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "test:e2e:ui",
      "type": "shell",
      "command": "npm run test:e2e:ui",
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "worker",
      "type": "shell",
      "command": "npm run worker",
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "test:api",
      "type": "shell",
      "command": "npm run test:api",
      "problemMatcher": []
    },
    {
      "label": "test:anthropic",
      "type": "shell",
      "command": "npm run test:anthropic",
      "problemMatcher": []
    },
    {
      "label": "test:redis",
      "type": "shell",
      "command": "npm run test:redis",
      "problemMatcher": []
    },
    {
      "label": "audit:lighthouse",
      "type": "shell",
      "command": "npm run audit:lighthouse",
      "problemMatcher": []
    },
    {
      "label": "ci",
      "type": "shell",
      "command": "npm run ci",
      "group": "build",
      "problemMatcher": ["$tsc", "$eslint-stylish"]
    },
    {
      "label": "Full Check (lint + typecheck + test)",
      "dependsOn": ["lint", "typecheck", "test"],
      "dependsOrder": "sequence",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Dev + Worker",
      "dependsOn": ["dev", "worker"],
      "dependsOrder": "parallel",
      "problemMatcher": []
    }
  ]
}
