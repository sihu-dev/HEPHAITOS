{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "types": ["node"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@hephaitos/types": ["../types/src/hephaitos/index.ts"],
      "@hephaitos/types/*": ["../types/src/hephaitos/*"],
      "@hephaitos/utils": ["../utils/src/index.ts"],
      "@hephaitos/utils/*": ["../utils/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/__tests__/**", "**/*.test.ts"],
  "references": [
    { "path": "../types" },
    { "path": "../utils" }
  ]
}
